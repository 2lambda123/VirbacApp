<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="10dp">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">


        <com.github.mikephil.charting.charts.RadarChart
            android:id="@+id/chart"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_gravity="left|top" />

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/horizontalScrollView"
            android:layout_alignRight="@+id/horizontalScrollView"
            android:layout_centerVertical="true"
            android:layout_gravity="right|top"
            android:layout_marginBottom="150dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvYMax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Global score : "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ff0000" />

                <TextView
                    android:id="@+id/y_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="3.11"
                    android:textAppearance="?android:attr/textAppearanceMedium"

                    android:textColor="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tvXMax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Improvement possible : "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ff0000" />

                <TextView
                    android:id="@+id/x_improuvement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="69 %"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000" />
            </RelativeLayout>

        </LinearLayout>


    </FrameLayout>
</RelativeLayout>

