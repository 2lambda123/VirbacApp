<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/husbandry"
    android:padding="10dp">

    <com.gc.materialdesign.views.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/headline"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Cleaning and disinfecting of the sow before farrowing (perineal area, udders..) ?"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff" />

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/headline"
                    android:layout_gravity="center_horizontal">

                    <RadioGroup
                        android:id="@+id/huq1Group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text"
                        android:checkedButton="@+id/huq1c2">

                        <RadioButton
                            android:id="@+id/huq1c1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Yes"
                            android:textColor="#ffffff" />

                        <RadioButton
                            android:id="@+id/huq1c2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No"
                            android:textColor="#ffffff" />
                    </RadioGroup>


                </TableRow>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/headline1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Protection of the backside and the udder-side of the sow with (rubber) mats (hygienised) ?"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff" />

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/headline"
                    android:layout_gravity="center_horizontal">

                    <RadioGroup
                        android:id="@+id/hq2Group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text"
                        android:checkedButton="@+id/huq2c2">

                        <RadioButton
                            android:id="@+id/huq2c1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Yes"
                            android:textColor="#ffffff" />

                        <RadioButton
                            android:id="@+id/huq2c2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No"
                            android:textColor="#ffffff" />
                    </RadioGroup>
                </TableRow>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout2"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/headline4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Drying-up of piglet at birth ?"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff" />

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/headline"
                    android:layout_gravity="center_horizontal">

                    <RadioGroup
                        android:id="@+id/huq3Group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text"
                        android:checkedButton="@+id/huq3c2">

                        <RadioButton
                            android:id="@+id/huq3c1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Yes"
                            android:textColor="#ffffff" />

                        <RadioButton
                            android:id="@+id/hq3c2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No"
                            android:textColor="#ffffff" />
                    </RadioGroup>
                </TableRow>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/linearLayout3"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/headline5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Positionning of piglets at udder ?"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff" />

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/headline"
                    android:layout_gravity="center_horizontal">

                    <RadioGroup
                        android:id="@+id/huq4Group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text"
                        android:checkedButton="@+id/huq4c2">

                        <RadioButton
                            android:id="@+id/huq4c1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Yes"
                            android:textColor="#ffffff" />

                        <RadioButton
                            android:id="@+id/huq4c2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No"
                            android:textColor="#ffffff" />
                    </RadioGroup>

                </TableRow>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout4"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/headline6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Supplying of energy and /or electrolytic solution ?"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff" />

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/headline"
                    android:layout_gravity="center_horizontal">

                    <RadioGroup
                        android:id="@+id/hq5Group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text"
                        android:checkedButton="@+id/hq5c2">

                        <RadioButton
                            android:id="@+id/hq5c1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Yes"
                            android:textColor="#ffffff" />

                        <RadioButton
                            android:id="@+id/hq5c2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No"
                            android:textColor="#ffffff" />
                    </RadioGroup>

                </TableRow>


            </LinearLayout>

            <com.gc.materialdesign.views.ButtonFloat
                android:id="@+id/suivHusbandry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/linearLayout5"
                android:layout_marginRight="24dp"
                android:layout_marginTop="@dimen/button_vertical_margin"
                android:background="@color/green"

                materialdesign:animate="true"
                materialdesign:iconDrawable="@drawable/button_suivant" />
        </RelativeLayout>

    </com.gc.materialdesign.views.ScrollView>
</RelativeLayout>